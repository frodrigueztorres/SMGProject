<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8FB783"
    tools:context=".ListCreatedUsers">

    <TextView
        android:id="@+id/lbl_TitleUserList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:text="@string/lista_de_usuarios"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_CreateUserFromList"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginTop="225dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/btn_background"
        android:text="@string/crear_usuario"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/btn_BackListUsers"
        app:layout_constraintStart_toEndOf="@+id/rv_ListCreatedUsers"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_BackListUsers"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="157dp"
        android:background="@drawable/btn_background"
        android:text="@string/btnback"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/rv_ListCreatedUsers"
        app:layout_constraintTop_toBottomOf="@+id/btn_CreateUserFromList" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ListCreatedUsers"
        android:layout_width="516dp"
        android:layout_height="340dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_CreateUserFromList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_TitleUserList"
        app:layout_constraintVertical_bias="0.97" />

    <View
        android:layout_width="516dp"
        android:layout_height="5dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="12dp"
        android:background="#C28B4D"
        android:backgroundTint="#C28B4D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="140dp"
        android:text="@string/nombre"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="140dp"
        android:text="@string/apellido"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="140dp"
        android:text="@string/nombre_de_usuario"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="31dp"
        android:text="@string/correo_electr_nico"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/lbl_TitleUserList" />
</androidx.constraintlayout.widget.ConstraintLayout>