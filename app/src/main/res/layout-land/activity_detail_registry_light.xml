<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8FB783"
    tools:context=".DetailRegistryLight">

    <ProgressBar
        android:id="@+id/pbr_DetailBarLight"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="145sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="8dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="25"
        android:progressTint="#FF0000"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/lbl_DetailIndicatorLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/indicatorgood"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/pbr_DetailBarLight"
        app:layout_constraintEnd_toEndOf="@+id/lbl_SubtitleIndicatorLight"
        app:layout_constraintStart_toStartOf="@+id/lbl_SubtitleIndicatorLight" />

    <TextView
        android:id="@+id/lbl_SubtitleIndicatorLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="10dp"
        android:text="@string/titlelight"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pbr_DetailBarLight" />

    <TextView
        android:id="@+id/lbl_NumberIndicatorLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_20"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lbl_DetailIndicatorLight"
        app:layout_constraintEnd_toEndOf="@+id/lbl_SubtitleIndicatorLight"
        app:layout_constraintStart_toStartOf="@+id/lbl_SubtitleIndicatorLight" />

    <TextView
        android:id="@+id/lbl_TitleListLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="456dp"
        android:layout_marginTop="36dp"
        android:text="@string/registro_hist_rico"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_TitleDetailIndicatorLight" />

    <TextView
        android:id="@+id/lbl_TitleDetailIndicatorLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/detalle_nivel_de_luz"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

    <Button
        android:id="@+id/btn_BackDetailIndicatorLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_background"
        android:text="@string/btnback"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.86" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ListIndicatorLight"
        android:layout_width="433dp"
        android:layout_height="135dp"
        android:layout_marginStart="211dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="123dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_BackDetailIndicatorLight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/pbr_DetailBarLight" />

    <View
        android:layout_width="433dp"
        android:layout_height="5dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="12dp"
        android:background="#C28B4D"
        android:backgroundTint="#C28B4D"
        app:layout_constraintStart_toEndOf="@+id/lbl_NumberIndicatorLight"
        app:layout_constraintTop_toBottomOf="@+id/lbl_date" />

    <TextView
        android:id="@+id/lbl_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="456dp"
        android:layout_marginTop="20dp"
        android:text="@string/date_registry"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_TitleListLight" />

    <TextView
        android:id="@+id/lbl_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="273dp"
        android:layout_marginTop="167dp"
        android:text="@string/value_registry"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/lbl_date"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>