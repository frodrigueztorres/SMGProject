<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8FB783"
    tools:context=".EditUser">

    <TextView
        android:id="@+id/lbl_EmailEditUser"
        android:layout_width="435dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="@string/correo_electr_nico"
        android:textAlignment="textStart"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lbl_PasswordEditUser"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lbl_PasswordEditUser"
        app:layout_constraintTop_toBottomOf="@+id/lbl_UsernameEditUser" />

    <EditText
        android:id="@+id/txt_UsernameEditUser"
        android:layout_width="365sp"
        android:layout_height="42sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:hint="@string/nombre_de_usuario"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:labelFor="@id/lbl_UsernameEditUser"
        android:paddingStart="10sp"
        android:paddingEnd="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_LastnameEditUser"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/lbl_NameEditUser"
        android:layout_width="435dp"
        android:layout_height="35dp"
        android:layout_marginTop="50dp"
        android:text="@string/nombre"
        android:textAlignment="textStart"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lbl_LastnameEditUser"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lbl_LastnameEditUser"
        app:layout_constraintTop_toBottomOf="@+id/lbl_TitleEditUser" />

    <EditText
        android:id="@+id/txt_LastnameEditUser"
        android:layout_width="365sp"
        android:layout_height="42sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:hint="@string/apellido"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:labelFor="@id/lbl_LastnameEditUser"
        android:paddingStart="10sp"
        android:paddingEnd="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_NameEditUser"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/txt_PasswordConfirmEditUser"
        android:layout_width="365sp"
        android:layout_height="42sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:hint="@string/contrase_a"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:labelFor="@id/lbl_PasswordConfirmEditUser"
        android:paddingStart="10sp"
        android:paddingEnd="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_PasswordEditUser"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/lbl_PasswordEditUser"
        android:layout_width="435dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="@string/contrase_a"
        android:textAlignment="textStart"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lbl_PasswordConfirmEditUser"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lbl_PasswordConfirmEditUser"
        app:layout_constraintTop_toBottomOf="@+id/lbl_EmailEditUser" />

    <TextView
        android:id="@+id/lbl_PasswordConfirmEditUser"
        android:layout_width="435dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="64dp"
        android:text="@string/repetir_contrase_a"
        android:textAlignment="textStart"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_EditUser"
        app:layout_constraintEnd_toStartOf="@+id/txt_PasswordConfirmEditUser"
        app:layout_constraintTop_toBottomOf="@+id/lbl_PasswordEditUser" />

    <EditText
        android:id="@+id/txt_NameEditUser"
        android:layout_width="365sp"
        android:layout_height="42sp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:hint="@string/nombre"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:labelFor="@id/lbl_NameEditUser"
        android:paddingStart="10sp"
        android:paddingEnd="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/lbl_UsernameEditUser"
        android:layout_width="435dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="@string/nombre_de_usuario"
        android:textAlignment="textStart"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lbl_EmailEditUser"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lbl_EmailEditUser"
        app:layout_constraintTop_toBottomOf="@+id/lbl_LastnameEditUser" />

    <EditText
        android:id="@+id/txt_EmailEditUser"
        android:layout_width="365sp"
        android:layout_height="42sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:hint="@string/correo_electr_nico"
        android:importantForAutofill="no"
        android:inputType="textPersonName|textEmailAddress"
        android:labelFor="@id/lbl_EmailEditUser"
        android:paddingStart="10sp"
        android:paddingEnd="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_UsernameEditUser"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/txt_PasswordEditUser"
        android:layout_width="365sp"
        android:layout_height="42sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:hint="@string/contrase_a"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:labelFor="@id/lbl_PasswordEditUser"
        android:paddingStart="10sp"
        android:paddingEnd="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_EmailEditUser"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/lbl_LastnameEditUser"
        android:layout_width="435dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="@string/apellido"
        android:textAlignment="textStart"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lbl_UsernameEditUser"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lbl_UsernameEditUser"
        app:layout_constraintTop_toBottomOf="@+id/lbl_NameEditUser" />

    <TextView
        android:id="@+id/lbl_TitleEditUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="@string/editar_usuario"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_EditUser"
        android:layout_width="136sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="402dp"
        android:layout_marginTop="67dp"
        android:background="@drawable/btn_background"
        android:text="@string/editar_usuario"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_PasswordConfirmEditUser" />
</android.support.constraint.ConstraintLayout>