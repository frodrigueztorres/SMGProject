<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8FB783"
    tools:context=".DetailRegistryHR">

    <ProgressBar
        android:id="@+id/pbr_DetailBarHr"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="145sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="8dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="25"
        android:progressTint="#FF0000"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_DetailIndicatorHr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/indicatorgood"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/pbr_DetailBarHr"
        app:layout_constraintEnd_toEndOf="@+id/lbl_SubtitleIndicatorHr"
        app:layout_constraintStart_toStartOf="@+id/lbl_SubtitleIndicatorHr" />

    <TextView
        android:id="@+id/lbl_SubtitleIndicatorHr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="10dp"
        android:text="@string/titlehr"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pbr_DetailBarHr" />

    <TextView
        android:id="@+id/lbl_NumberIndicatorHR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_20"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lbl_DetailIndicatorHr"
        app:layout_constraintEnd_toEndOf="@+id/lbl_SubtitleIndicatorHr"
        app:layout_constraintStart_toStartOf="@+id/lbl_SubtitleIndicatorHr" />

    <TextView
        android:id="@+id/lbl_TitleListHR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="472dp"
        android:layout_marginTop="40dp"
        android:text="@string/registro_hist_rico"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_TitleDetailIndicatorHR" />

    <TextView
        android:id="@+id/lbl_TitleDetailIndicatorHR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/detalle_humedad_relativa"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

    <Button
        android:id="@+id/btn_BackDetailIndicatorHR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_background"
        android:text="@string/btnback"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.86" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ListIndicatorHr"
        android:layout_width="433dp"
        android:layout_height="135dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="123dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_BackDetailIndicatorHR"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="433dp"
        android:layout_height="5dp"
        android:layout_marginStart="472dp"
        android:layout_marginTop="9dp"
        android:background="#C28B4D"
        android:backgroundTint="#C28B4D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_date" />

    <TextView
        android:id="@+id/lbl_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="472dp"
        android:layout_marginTop="16dp"
        android:text="@string/date_registry"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_TitleListHR" />

    <TextView
        android:id="@+id/lbl_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="272dp"
        android:layout_marginTop="167dp"
        android:text="@string/value_registry"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/lbl_date"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>